{
    "name": "quickhyperlink",
    "displayName": "Quick Hyperlink",
    "description": "Makes the selected text into a hyperlink, taking the target from your clipboard",
    "version": "0.1.0",
    "publisher": "lewski",
    "author": {
        "name": "leeviaaltonen"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.makeLink"
    ],
    "main": "./out/extension",
    "license": "MIT",
    "contributes": {
        "commands": [
            {
                "command": "extension.makeLink",
                "title": "Make hyperlink"
            }
        ],
        "keybindings": [
            {
                "command": "extension.makeLink",
                "key": "ctrl+alt+l",
                "mac": "ctrl+cmd+l",
                "when": "editorHasSelection"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.makeLink",
                    "when": "editorHasSelection"
                }
            ]
        },
        "scripts": {
            "vscode:prepublish": "npm run compile",
            "compile": "tsc -p ./",
            "watch": "tsc -watch -p ./",
            "postinstall": "node ./node_modules/vscode/bin/install",
            "test": "npm run compile && node ./node_modules/vscode/bin/test"
        },
        "devDependencies": {
            "typescript": "^2.6.1",
            "vscode": "^1.1.6",
            "tslint": "^5.8.0",
            "@types/node": "^7.0.43",
            "@types/mocha": "^2.2.42"
        }
    }
}